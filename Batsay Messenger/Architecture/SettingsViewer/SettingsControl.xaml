<UserControl
    x:Class="BatsayMessenger.Architecture.SettingsViewer.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{DynamicResource InterFonts}"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource MaterialDesignBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.ColumnSpan="2"
            Padding="10,10,10,10"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Settings"
            FontFamily="Rubik Light"
            FontSize="28"
            FontWeight="Normal" />
        <CheckBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="TopMostCheckBox_Click"
            Content="Always put window in the foreground"
            Foreground="{DynamicResource PrimaryHueMidBrush}" />
        <CheckBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Dark theme"
            Foreground="{DynamicResource PrimaryHueMidBrush}" />
        <CheckBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,105,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="WindowHeaderCheckBox_Click"
            Content="Use default window border"
            Foreground="{DynamicResource PrimaryHueMidBrush}" />
        <Image
            Grid.Row="1"
            Grid.Column="1"
            Height="207"
            Margin="0,0,0,0"
            Source="/BatsayMessenger;component/Resources/artem_art.png" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Batsay Messenger"
            FontFamily="Inter"
            FontSize="36"
            FontStyle="Normal"
            FontWeight="Bold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Right"
            Content="ver."
            FontSize="16" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,0,0,0"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            Text="App allows to write messages in conversations as public in VK.&#xD;&#xA;Named after Artem Batsay, young celebrity and great man from Novosibirsk."
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            TextAlignment="Center"
            TextWrapping="Wrap">
            If you want more info, please check<Hyperlink NavigateUri="https://vk.com/bacay99" RequestNavigate="Hyperlink_RequestNavigate">our VK public</Hyperlink>
            .</TextBlock>
    </Grid>
</UserControl>